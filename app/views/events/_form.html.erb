<%= simple_form_for @event, :html => { :multipart => true } do |f| %>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
<%= f.file_field :event_img %>
<%= f.input :title, label: "Event Title" %>
<%= f.input :lokasi %>
<%= f.input :jenis %>
<%= f.input :deskripsi %>
<%= f.button :submit, :class => "btn-custom2" %>
<% end %>
